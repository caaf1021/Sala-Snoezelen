<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_romm_light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="salacima.ec.edu.ups.est.salamultisensorial.presentation.RoomLight"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_room_lights">

    <TextView
        android:text="@string/title_select_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/blanco"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btnroomlight"
        android:background="@android:color/transparent"
        android:id="@+id/btnRoomLight" />

    <Button
        android:text="Enviar Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRoomLightSend" />

    <Button
        android:text="Demostracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRoomLightDemonstration" />

    <Button
        android:text="Finalizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRooomLightFinalize" />

</LinearLayout>
