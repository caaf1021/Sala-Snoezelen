<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ModuleStairwayLights"
    android:background="@drawable/escalera_luces"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <ImageButton
        android:id="@+id/btnStairwayBack"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/btnStairwayColor7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnStairwaySend"
        app:layout_constraintTop_toBottomOf="@+id/lbEscaleraLuces"
        app:srcCompat="@drawable/ico_back"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/lbEscaleraLuces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tituloEscalera"
        android:textColor="@color/negro"
        android:textSize="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton

        android:id="@+id/btnStairwayColor8"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbEscaleraLuces"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/btnStairwayColor7"
        android:layout_width="250dp"
        android:layout_height="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnStairwayColor8"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStairwayColor8"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnStairwayColor8" />

    <ImageButton
        android:id="@+id/btnStairwayColor6"
        android:layout_width="250dp"
        android:layout_height="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnStairwayColor7"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStairwayColor7"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnStairwayColor7" />

    <ImageButton
        android:id="@+id/btnStairwayColor5"
        android:layout_width="250dp"
        android:layout_height="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnStairwayColor6"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStairwayColor6"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnStairwayColor6" />

    <ImageButton
        android:id="@+id/btnStairwayColor4"
        android:layout_width="250dp"
        android:layout_height="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnStairwayColor5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStairwayColor5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnStairwayColor5" />

    <ImageButton
        android:id="@+id/btnStairwayColor3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnStairwayColor4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStairwayColor4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnStairwayColor4" />

    <ImageButton
        android:id="@+id/btnStairwayColor2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnStairwayColor3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStairwayColor3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnStairwayColor3" />

    <ImageButton
        android:id="@+id/btnStairwayColor1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnStairwayColor2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStairwayColor2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnStairwayColor2" />

    <Button
        android:id="@+id/btnStairwayRamdonColor"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="99dp"
        android:text="Colores Aleatorios"
        android:textSize="25dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="107dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/rgStairwayMode" />

    <Button
                android:id="@+id/btnStairwaySend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar"
        android:textSize="25dp"
                android:layout_marginStart="154dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo"
        android:textSize="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="57dp"
        app:layout_constraintRight_toRightOf="@+id/rgStairwayMode"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnStairwayColor1" />

    <RadioGroup
        android:id="@+id/rgStairwayMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="45dp"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnStairwayColor1"
        app:layout_constraintTop_toTopOf="@+id/textView12">

        <RadioButton
            android:id="@+id/rgStairway1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Personalizado"
            android:textColor="@color/negro"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rgStairway2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Demostracion"
            android:textColor="@color/negro"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rgStairway3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Finalizar"
            android:textColor="@color/negro"
            android:textSize="20dp" />
    </RadioGroup>


</android.support.constraint.ConstraintLayout>
